modules = ["nodejs-20", "python-3.11"]
[nix]
channel = "stable-25_05"
packages = ["unzip", "zip"]

[agent]
expertMode = true
integrations = ["github:1.0.0"]

[userenv]

[userenv.shared]
WORDPRESS_URL = "https://heavy-status.com"
NEXT_PUBLIC_ONESIGNAL_APP_ID = "1e4a9567-b83d-48e5-815e-9693386df41f"

[workflows]
runButton = "Project"

[[workflows.workflow]]
